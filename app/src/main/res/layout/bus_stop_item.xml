<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="#000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDF1EF">


            <TextView
                android:id="@+id/busStopName"
                android:layout_width="141dp"
                android:layout_height="25dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:text="James Bond"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/updateBusStopBtn"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50"
                android:text="Update"
                android:textAlignment="center"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/busStop_deleteBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.509">

            </Button>

            <Button
                android:id="@+id/busStop_deleteBtn"
                android:layout_width="65dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32dp"
                android:backgroundTint="#F44336"
                android:onClick="onClick"
                android:text="Delete"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/busStopName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.514">

            </Button>

            <TextView
                android:id="@+id/routeName"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Route 1"
                android:textSize="25px"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/busStopName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:text="Route:"
                android:textSize="25px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busStopName"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>